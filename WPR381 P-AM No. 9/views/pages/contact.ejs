<%- include('../partials/header') %>
<body class = "ContactPage">
  

<div id="container">
<form method="POST" action="/contact">
  <div class="form-css">
  <h2>Please fill out the form below for a lightning-fast response.</h2>
  <Label for="name">Your Name</Label>
  <input type="text" name="name" placeholder="John Doe" required /><br />
<hr>
  <Label for="email">Your Email</Label>
  <input type="email" name="email" placeholder="youremail@gmail.com" required /><br />
<hr>
  <Label for="message">Your Message</Label>
  <textarea name="message" placeholder="When is the next GameDev live stream???" required></textarea><br />
<hr>
  <button type="submit">Send</button>
</form>

<hr>
<h2>Submitted Messages</h2>
<% if (messages.length > 0) { %>
  <ul>
    <% messages.forEach(msg => { %>
      <li>
        <strong><%= msg.name %></strong> (<%= msg.email %>) said:<br>
        <em><%= msg.message %></em>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p>No messages yet.</p>
<% } %>
</div>

</body>
<%- include('../partials/footer') %>
