<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <title><%= typeof pageTitle !== 'undefined' ? pageTitle : "Game Community Portal" %></title>

</head>

<body>
  <audio id="menuSound" src="/sounds/fantasy-game-sword-cut-sound-effect-2-7000-sfx-on-my-patreon-339823 (1).mp3" preload="auto"></audio>
  <audio id="CmenuSound" src="/sounds/draw-sword1-44724.mp3" preload="auto"></audio>
  <nav id = "nav">
  <!-- Menu icon -->
  <span class="menu-icon" onclick="openNav()">☰ Menu</span>


  <!-- Side menu -->
  <div id="Sidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="/"><span>🎮 Home</span></a>
    <a href="/events"><span>⚔️ Events</span></a>
    <a href="/about"><span>🧠 About</span></a>
    <a href="/contact"><span>📧 Contact</span></a>
  </div>
</nav>
</body>

<script>
  function openNav() {
    document.getElementById("Sidenav").style.width = "15%";
    document.querySelector(".menu-icon").style.display = "none";
    const openSound = document.getElementById("CmenuSound");
    openSound.volume = 0.1; 
    openSound.play();
  }
  
function closeNav() {
  document.getElementById("Sidenav").style.width = "0%";
  const menuIcon = document.querySelector(".menu-icon");
  menuIcon.style.display = "flex";
  menuIcon.style.width = "6%";
  const closeSound = document.getElementById("menuSound");
  closeSound.volume = 0.2; 
  closeSound.play();
}
</script>


